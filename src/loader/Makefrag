OBJDIRS += loader

$(OBJDIR)/loader/stage1.bin: src/loader/stage1.S | $(OBJDIR)/loader
	@echo "$(MSG_YASM) $@"
	$(VERBOSE)$(YASM) -f bin -o $@ $<

$(OBJDIR)/loader/stage2.bin: src/loader/stage2.S | $(OBJDIR)/loader
	@echo "$(MSG_YASM) $@"
	$(VERBOSE)$(YASM) -f bin -o $@ $<

all: $(OBJDIR)/loader/stage1.bin $(OBJDIR)/loader/stage2.bin
